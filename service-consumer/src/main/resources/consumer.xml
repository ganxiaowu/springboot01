<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"

       xsi:schemaLocation="

         http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans.xsd
         http://code.alibabatech.com/schema/dubbo
         http://code.alibabatech.com/schema/dubbo/dubbo.xsd
         http://www.springframework.org/schema/context
         http://www.springframework.org/schema/context/spring-context.xsd
">

    <context:component-scan base-package="com.service"></context:component-scan>

    <!--指定当前服务-->
    <dubbo:application name="user-service-consumer"></dubbo:application>
    <!--指定注册中心位置-->
    <!--<dubbo:registry address="zookeeper://127.0.0.1:2181"></dubbo:registry>-->
    <dubbo:registry protocol="zookeeper" address="127.0.0.1:2181"></dubbo:registry>
    <!--声明需要调用的远程接口-->
    <dubbo:reference interface="com.service.service.UserService" id="userService"></dubbo:reference>

    <!--监控中心 自动发现-->
    <dubbo:monitor protocol="registry"></dubbo:monitor>
    <!--直连监控中心-->
    <!--<dubbo:monitor address="172.0.0.1:7070"></dubbo:monitor>-->



</beans>